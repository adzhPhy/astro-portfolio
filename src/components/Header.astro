            <h1>
              <span class="text-3xl font-extrabold"> Ali-Dzhan</span>
            </h1>
          </div>
        </div>
        <div
          class="max-w-fit mr-1 hover-animation transition-all ease-out shadow-xl shadow-th-primary hover:shadow-2xl rounded-xl bg-gradient-to-br from-th-secondary via-th-primary to-th-background"
        >
          <a
            href="https://drive.google.com/file/d/1VqBV_D9PtqLKJZ6VFYlIf5i6tw-RqpN6/view?usp=sharing"
          >
            <Image src={cvIcon} width={42} height={52} alt="CV Icon" />
